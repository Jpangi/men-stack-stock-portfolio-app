<!-- form for adding a new stock to portfolio -->
<!-- views/new.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Stock</title>
  </head>
  <body>
       <%- include('./partials/_navbar.ejs') %>
    <h1 class="new-header">Add Stock</h1>
  <div class="new-container">
    <form class="new-form" action="/stocks" method="POST">
        <label class="label-new" for="tickerSymbol">Ticker Symbol:</label>
        <input type="text" name="tickerSymbol" placeholder="Ticker Symbol" id="tickerSymbol" />
        <label class="label-new" for="companyName">Company:</label>
        <input  type="text" name="companyName" placeholder="Company name" id="companyName" />
        <label class="label-new" for="sharesOwned">Quantity:</label>
        <input type="number" name="sharesOwned" placeholder="shares owned" id="sharesOwned" />
        <label class="label-new" for="purchasePrice">Purchase Price:</label>
        <input type="number" name="purchasePrice" placeholder="price purchased at" id="purchasePrice" />
        <label class="label-new" for="purchaseDate">Date:</label>
        <input type="date" name="purchaseDate" placeholder="date of purchase" id="purchaseDate" />
        <label class="label-new" for="currentPrice">Current Price:</label>
        <input type="number" name="currentPrice" placeholder="current price" id="currentPrice" />

      <!-- Add a submit button -->
      <button class="btn-new-form" type="submit">Add Stock</button>
    </form>

  </div>

  </body>
</html>
